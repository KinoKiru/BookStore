@model Category

@{ 
    if (ViewBag.error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.error
        </div>
    }
}

    <form method="post" asp-action=""="ConfirmDelete" asp-route-id="@Model.id">
        <div class="border-bottom p-3 mt-4">
            <div class="row pb-2">
                <h2>Catogorie @Model.name echt verwijderen?</h2>
                <hr />
            </div>

            <div asp-validation-summary="All"></div>

            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 150px">Verwijderen</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width: 250px">
                Terug naar overzicht
            </a>
        </div>
    </form>

@section Scripts {
    @{ 
        <partial name="_ValidationScriptsPartial"/>
     }
}