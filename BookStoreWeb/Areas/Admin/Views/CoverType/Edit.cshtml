@model BookStore.Models.CoverType

@{
    if (ViewBag.error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.error
        </div>
    }
}

<form method="post">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2>Kaft Wijzigen</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">opslaan</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width: 250px">
            Terug naar overzicht
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}